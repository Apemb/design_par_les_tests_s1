{
  "ts-node": {
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es6"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    ".idea",
    "./dist",
    "./test",
    "./documentation",
    "./scripts"
  ]
}
